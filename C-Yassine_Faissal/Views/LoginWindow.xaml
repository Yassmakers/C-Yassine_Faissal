<Window x:Class="C_Yassine_Faissal.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:vm="clr-namespace:C_Yassine_Faissal.ViewModels"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Email:" Grid.Row="0"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="1" Margin="0,0,0,5"/>

        <Label Content="Password:" Grid.Row="2"/>
        <PasswordBox x:Name="PasswordTextBox" Grid.Row="3" Margin="0,0,0,-5"/>

        <Button Content="Login" Grid.Row="3" HorizontalAlignment="Left" Margin="116,62,0,-60" Click="LoginButton_Click" Width="46"/>
        <Button Content="Login as Guest" Command="{Binding GuestLoginCommand}"  Grid.Row="3" HorizontalAlignment="Left" Margin="30,84,0,-82"  />
    </Grid>
</Window>
