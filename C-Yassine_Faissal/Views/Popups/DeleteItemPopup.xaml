<Window x:Class="C_Yassine_Faissal.Views.Popups.DeleteItemPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DeleteItemPopup" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Enter the title of the item you want to delete:" FontWeight="Bold" Margin="10" />
            <TextBox x:Name="SearchTitleTextBox" Width="300" Margin="10" />
            <Button Content="Search" Width="150" Margin="10" Click="SearchButton_Click" />
            <TextBlock Text="Item Details:" FontWeight="Bold" Margin="10" />
            <TextBlock x:Name="ItemDetailsTextBlock" Margin="10" TextWrapping="Wrap" />
            <Button Content="Permanently Delete" Width="150" Margin="10" Click="DeleteButton_Click" />
        </StackPanel>
    </Grid>
</Window>
