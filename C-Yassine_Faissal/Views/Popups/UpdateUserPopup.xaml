<UserControl x:Class="C_Yassine_Faissal.Views.Popups.UpdateUserPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:C_Yassine_Faissal.Views.Popups"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="User ID:" Grid.Row="0" />
        <TextBox x:Name="UserIdTextBox" Grid.Row="1" />
        <Label Content="New Name:" Grid.Row="2" />
        <TextBox x:Name="NewNameTextBox" Grid.Row="3" />
        <Button x:Name="UpdateUserButton" Content="Update User" Grid.Row="4" Margin="10" Click="UpdateUserButton_Click" />
    </Grid>

</UserControl>
