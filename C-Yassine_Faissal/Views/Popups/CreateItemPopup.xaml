<UserControl x:Class="C_Yassine_Faissal.Views.Popups.CreateItemPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:C_Yassine_Faissal.Views.Popups">
    <!-- UserControl content goes here -->
    <Grid Height="167" Width="165">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Label Content="Name:" Grid.Row="0" />
    <TextBox x:Name="NameTextBox" Grid.Row="1" />
        <Button x:Name="CreateItemButton" Content="Create Item" Grid.Row="2" Margin="10" Command="{Binding CreateItemCommand}" />
    </Grid>
</UserControl>
